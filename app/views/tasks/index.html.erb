<p id="notice"><%= notice %></p>

<h1>Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Completed</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.description %></td>
        <td><%= task.completed %></td>
        <td><%= link_to 'Show', task, class: 'btn btn-success', style: 'color: white' %></td>
        <td><%= link_to 'Edit', edit_task_path(task), class: 'btn btn-primary', style: 'color: white' %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' }, style: 'color: white', class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

